@model IEnumerable<AALEKH_SOCIETY_COOP.Residents>
@{
    Layout = "_mainLayout";
    ViewData["Title"] = "Residents";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item active"><a asp-action="index" asp-controller="Dashboard">Dashboard</a>  </li>
    <li class="breadcrumb-item active">Residents</li>
</ol>
<div class="card">
    <div class="card-header">
       Residents List
        <a class=" float-right btn btn-sm btn-outline-primary " asp-action="Create">Add a new Resident</a>
    </div>
    <div class="card-body">
        <table class="table table-hover table-sm" id="example" style="text-align:center;">
            <thead>
                <tr>

                    @*<th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Block_no)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mobile_no)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.has_Rentals)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Is_a_Streetmember)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Block_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile_no)
                        </td>
                        <td>
                           @{
                                var rentals = item.has_Rentals;
                                if (rentals == true)
                                {
                                    <input type="checkbox" checked="checked" id="status" style="height:1.5rem;width:1.5rem" disabled="disabled"/>
                                }
                                else
                                {
                                    <input type="checkbox" id="status" style="height:1.5rem;width:1.5rem" disabled="disabled"/>
                                }
                            }
                        </td>
                        <td>
                            @{
                                var streetmem = item.Is_a_Streetmember;
                                if (streetmem == true)
                                {
                                    <input type="checkbox" checked="checked" id="status" style="height:1.5rem;width:1.5rem" disabled="disabled"/>
                                }
                                else
                                {
                                    <input type="checkbox" id="status" style="height:1.5rem;width:1.5rem" disabled="disabled"/>
                                }
                            }
                            
                          
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
<script>
            $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>
}