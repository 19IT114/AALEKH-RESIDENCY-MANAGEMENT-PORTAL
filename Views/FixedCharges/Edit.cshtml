@model AALEKH_SOCIETY_COOP.FixedCharges
@{
     Layout = "_mainLayout";
    ViewData["Title"] = "Fixed-Charges";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item active"><a asp-action="index" asp-controller="Dashboard">Dashboard</a>  </li>
    <li class="breadcrumb-item active"><a asp-action="index" asp-controller="FixedCharges">Fixed-Charges</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>


<div class="card">
    <div class="card-header">
        Edit the @Model.Type.
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label asp-for="Type" class="control-label"></label><br />
                            <input asp-for="Type" class="form-control" readonly/>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="FixedCharge" class="control-label"></label>
                            <input asp-for="FixedCharge" class="form-control" />
                            <span asp-validation-for="FixedCharge" class="text-danger"></span>
                        </div>
                         <div class="form-group col-md-3 m-1">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" type="checkbox" style="height: 1.5rem;width: 1.5rem;"/>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />

                    <div class="form-group float-right">
                        <a class="btn btn-sm btn-outline-info" asp-action="Index">Back to List</a> &nbsp;&nbsp;&nbsp;
                        <input type="submit" value="Save & Exit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

      

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
